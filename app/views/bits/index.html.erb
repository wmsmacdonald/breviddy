<h3 id="motto">The best bits of videos around the internet</h3>

<div id="about-super-box">
    <div id="about-box">
      <h4>Gifs, but better:</h4>
      <ul>
        <li>Instantly access the source video</li>
        <li>Watch in the highest possible quality</li>
        <li><%= link_to 'Easy to make', 'bits/new' %> - no converting needed</li>
      </ul>
    </div>
</div>

<div id="search-super-box">
  <%= form_tag('/search', :method => "get", id: "search-form") do %>
      <div class="search-box">
        <%= text_field_tag :search, params[:search], placeholder: "Search", id: "search-input" %><!--
        --><button id="search-icon" class="mybtn"><i class="fa fa-search"></i></button>
      </div>
  <% end %>
</div>

<div id="bits-super-box">
  <div id="bits-box" data-no-turbolink>
        <%= render @bits %>
  </div>
</div>

<div id="infinite-scrolling">
    <%= will_paginate %>
</div>

<span id="top-link-block" class="hidden">
    <a href="#top" id="top-button"  onclick="$('html,body').animate({scrollTop:0},'slow');return false;">
      <i class="fa fa-arrow-up"></i>
    </a>
</span>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Share this video bit</h4>
      </div>
      <div id="modal-body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    if ( ($(window).height() + 100) < $(document).height() ) {
        $('#top-link-block').removeClass('hidden').affix({
            // how far to scroll down before link "slides" into view
            offset: {top:800}
        });
    }
    if (getCookie("return_visit") === "true") {
        $('#about-super-box').hide();
        $('#search-super-box').show();
    }
    else {
        $('#about-super-box').show();
        document.cookie = "return_visit=true; expires=Tue, 19 Jan 2038 03:14:07 GMT";
    }
</script>